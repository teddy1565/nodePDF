{
  "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "lib": ["es2022", "es2017", "es7", "es6", "es5"],
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "types": ["node"]
  },
  "include": [
      "./src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "src/test/**/*"
  ]
}
